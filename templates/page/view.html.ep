% extends 'base/heavy';
%#
<% content 'jsadd' => begin %>
<script type="text/javascript" src="/js_site/result.js"></script>
% $photosize eq 'fit' and do {
<script type="text/javascript" src="/js_site/fit.js"></script>
% };
<% end %>
%#
<% content 'ptitleadd' => begin %>
%== include 'elem/argstitle';
(<%== $pos %>/<%== $total %>)
<% end %>
%#
<% content 'pathadd' => begin %>
<%== include 'elem/argspath' %>
<% end %> 
%#
<% content 'classtop' => begin %><%== $display eq 'none' ? '' : 'bar' %><% end %>
%#
<% content 'btitle' => begin %>
%#
% if ( $display eq 'full' ) {
%  if ( $runmode ne 'search' ) {
<h1><%== include 'elem/argstitle' %> (<%= $t->{PHOTO} %> <%== $pos %>/<%== $total %>)</h1>
%  } else {
%== include 'block/search';
%  }
% }
<% end %>
%#
<% content 'pathadd' => begin %>
% if ( $display ne 'full' ) {
<%== include 'elem/argstitle' %> (<%= $t->{PHOTO} %> <%== $pos %>/<%== $total %>)
% }
<% end %>
%#
<% content 'setupadd' => begin %>
<%== include 'elem/setup', setupkey => 'display' %>
<%== include 'elem/setup', setupkey => 'photosize' %>
<% end %>
%#
<% content 'main' => begin %>
<div class="flip center<%= $display eq 'full' ? ' bar' : '' %>">
<hr class="stripe">
% my $label1 = $t->{PHOTO_FIRST};
% my $label2 = $t->{PHOTO_PREV};
% if ( $pos > 1 ) {
<a title="<%= $label1 %>" href="<%== include 'href/id', toid => $pin->[0] %>"><%= $label1 %></a>
<%== $sep %>
<a title="<%= $label2 %>" href="<%== include 'href/id', toid => $pin->[1] %>"><%= $label2 %></a>
% } else { 
<%= $label1 %> <%== $sep %> <%= $label2 %>
% }
<%== $sep %>
<a href="<%== include 'href/action', toaction => 'auto' %>"><%= $t->{THUMBS} %></a>
<%== $sep %>
% $label1 = $t->{PHOTO_NEXT};
% $label2 = $t->{PHOTO_LAST};
% if ( $pos < $total ) {
<a title="<%= $label1 %>" href="<%== include 'href/id', toid => $pin->[2] %>"><%= $label1 %></a>
<%== $sep %>
<a title="<%= $label2 %>" href="<%== include 'href/id', toid => $pin->[3] %>"><%= $label2 %></a>
% } else { 
<%= $label1 %> <%== $sep %> <%= $label2 %>
% }
</div>
%#
% if ( $display eq 'full' ) {
<div class="aeroplus bar">
% my $i = 0;
% my $j = 1;
% scalar ( @$comment ) > 0 and do {
%  foreach my $comm ( @{ $comment } ) {
% $j++ > 1 and do {
<%= $sep %>
% };  
<%= $comm %>
%   if ( defined $resultkey->[$i] ) {
<span class="result lean shrink" id="<%== $resultkey->[$i] %>"></span>
%   $i++; 
%   }
%  }
<%= $sep %>
% };
<span class="shrink">
% $i = 1;
% my $pdet = '93lioI+d=))(/l8rflOLW3wr';
% foreach my $detail ( @$detail ) {
% if ( $detail->[0] ne $pdet ) {
<%= $i++ == 1 ? '' : $sep %>
<%= $t->{uc( $detail->[0] ne 'folder' ? $detail->[0] : 'album' )} %>
% }
% $pdet =  $detail->[0];
% $detail->[0] ne 'time' and do {
<a href="<%== include 'href/actionpair', topri => $detail->[0], tosec => $detail->[1] %>">
% };
%== include 'elem/out', a => $detail->[0], b => $detail->[1]; 
% $detail->[0] ne 'time' and do {
</a>
% };
% }
<%= $sep %> <%= $t->{PHOTO_ID} %> <%== fullnum33 ( $image->[0], $image->[1] ) %><span></div>
% }
<div class="center" id="fitparent">
<a href="<%== $photobase %>/<%== $image->[2] %>/<%== $image->[3] %>">
<img id="fittarget" src="<%== $photobase %>/<%== $image->[2] %>/<%== $image->[3] %>"></a>
</div>
<% end %>
